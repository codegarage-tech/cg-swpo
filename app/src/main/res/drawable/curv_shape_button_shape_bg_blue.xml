<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >

        <shape android:shape="rectangle">
            <!--make a gradient background-->

            <!--apply a border around button-->
            <stroke android:color="@color/whiteColor"
                android:width="1dp" />
            <solid android:color="@color/blue_400"/>
            <!-- make the button corners rounded-->
            <corners android:radius="4dip"/>
        </shape>
    </item>
    <item>
        <shape>

            <stroke
                android:width="1dp"
                android:color="@color/whiteColor" />
            <solid android:color="@color/blue_400"/>
            <corners
                android:radius="4dip" />
            <!-- <padding
                 android:left="2dp"
                 android:top="2dp"
                 android:right="2dp"
                 android:bottom="2dp" />-->
        </shape>
    </item>
</selector>