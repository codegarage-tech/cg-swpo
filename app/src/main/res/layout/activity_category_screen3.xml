<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_grey_300">

    <include
        android:id="@+id/appbarnavigationLayout"
        layout="@layout/toolbar_details" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:paddingTop="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_10">

                <HorizontalScrollView
                    android:id="@+id/hv_user_select_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:gravity="center"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/lin_category_select_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingRight="8dp">

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


            <com.jude.easyrecyclerview.waveswiperefresh.WaveSwipeRefreshRecyclerView
                android:id="@+id/rv_medicine_by_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                android:scrollbars="none"
                app:layout_empty="@layout/view_empty"
                app:layout_progress="@layout/view_progress" />

            <LinearLayout
                android:id="@+id/lin_no_data_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_50">

                <ImageView
                    android:id="@+id/iv_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_no_item"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_no_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="No Data Found"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="@dimen/dp_10" />

            </LinearLayout>
        </LinearLayout>

</LinearLayout>