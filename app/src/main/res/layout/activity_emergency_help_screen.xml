<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_300">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/toolbar_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_toolbar"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/map_container1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/emergency_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.EmergencyHelpActivity" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_emergency_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_10"
                    android:background="@color/colorOrderStateBlue"
                    android:visibility="visible" />


            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/map_container2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_base_seller_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="@string/title_base_seller"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_base_seller_see_more"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight=".3"
                    android:gravity="right"
                    android:text="@string/title_see_more"
                    android:textAllCaps="true"
                    android:textColor="@color/red_400"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="italic" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_base_seller_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_3"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>