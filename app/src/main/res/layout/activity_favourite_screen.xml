<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteColor">

    <include
        android:id="@+id/appbarnavigationLayout"
        layout="@layout/toolbar_details" />


            <com.jude.easyrecyclerview.waveswiperefresh.WaveSwipeRefreshRecyclerView
                android:id="@+id/rv_favourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:scrollbars="none"
                app:layout_progress="@layout/view_progress" />

    <LinearLayout
        android:id="@+id/lin_login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/vector_ic_unauthorized" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="@string/txt_favourite_login_mgs"
            android:textColor="@color/color_grey_600"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="180dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="50dp"
            android:background="@drawable/curv_shape_border_green_bg_transferent"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_no_data_found_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
       android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/vector_ic_empty_box" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="@string/txt_favourite_is_not_found"
            android:textColor="@color/color_grey_600"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>