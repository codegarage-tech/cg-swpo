<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteColor"
    android:id="@+id/rel_main_supplier_details">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/toolbar_base" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_below="@id/app_toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
       >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
               >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:background="@drawable/shape_circular_white_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_10">

                        <ImageView
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_launcher" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="22dip"
                        android:layout_height="22dip"
                        android:layout_gravity="right|top"
                        android:background="@drawable/shape_circular_red_bg_view"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/dp_10" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Safeway"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_18"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Pharma "
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:textAllCaps="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/dp_50">

                    <ImageView
                        android:id="@+id/iv_store_details_printer"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="right|center"
                        android:layout_marginTop="@dimen/dp_3"
                        app:srcCompat="@drawable/vector_ic_printer" />

                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_store_details_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:visibility="visible" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_subtotals_screen" />

        <LinearLayout
            android:id="@+id/lin_order_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/title_delivery_address"
                android:textColor="@color/blue_400"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="@color/color_grey_800"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight=".7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/title_payment_method"
                        android:textColor="@color/color_pink"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/title_cash_on_delivery"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="@string/txt_total_tk"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_totals_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:text="1234.00 BDT"
                            android:textColor="@color/color_pink"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cv_picture_view"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        card_view:cardCornerRadius="4dip"
                        card_view:cardElevation="0dip">

                        <ImageView
                            android:id="@+id/iv_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/vector_ic_error"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rel_skip_accepted_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_5">

        <Button
            android:id="@+id/btn_skip_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/curv_shape_button_shape_bg_pink"
            android:text="@string/title_skip_order"
            android:textColor="@color/whiteColor"
            android:layout_marginRight="@dimen/dp_3"/>


        <Button
            android:id="@+id/btn_accept_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:background="@drawable/curv_shape_primary_color_bg"
            android:text="@string/title_accept_order"
            android:textColor="@color/whiteColor" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_order_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_order_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/btn_bg_color_primary"
            android:text="@string/title_submit"
            android:layout_gravity="center"
            android:textSize="@dimen/small_font_size"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>