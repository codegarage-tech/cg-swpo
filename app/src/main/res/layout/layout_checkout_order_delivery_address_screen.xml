<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_grey_200"
    android:orientation="vertical">

    <include layout="@layout/layout_subtotals_screen" />

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/title_delivery_address"
                android:textColor="@color/blue_400"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="@color/color_grey_800"
                android:textSize="@dimen/sp_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/lin_lay_add_new_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dashed_line"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_add_new_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="@dimen/dp_7"
                        android:gravity="center"
                        android:textColor="@color/green_600"
                        android:textSize="@dimen/sp_18"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_add_new_address_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="@dimen/dp_7"
                        android:text="@string/title_add_new_address"
                        android:textAllCaps="true"
                        android:textColor="@color/green_600"
                        android:textSize="@dimen/sp_18"
                        android:focusable="false"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_selected_ok"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_round_tick"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_service_charge_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight=".6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="@string/title_payment_method"
                android:textColor="@color/color_pink"
                android:textSize="@dimen/sp_18" />

            <RadioGroup
                android:id="@+id/rd_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rd_coa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="@string/title_cash_on_delivery"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/rdb_bkash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:text="@string/title_bkash_payment"
                    android:textSize="@dimen/sp_14" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay_upload_pic"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight=".4"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="80dip"
                android:layout_height="90dip"
                android:padding="@dimen/dp_1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="80dip"
                    android:layout_height="90dip"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@mipmap/upload_file" />
<!--

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/vector_attachment_add" />
-->

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/title_upload_prescription"
                android:layout_gravity="center"
                android:textColor="@color/color_grey_800"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>