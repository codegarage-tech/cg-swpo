<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_grey_200"
        android:orientation="horizontal">


            <LinearLayout
                android:layout_width="110dip"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@mipmap/img_test_free_delivery"
                    android:padding="15dip"
                    android:layout_marginTop="@dimen/dp_7"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                   >

                    <TextView
                        android:id="@+id/tv_product_generic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:text="Free Delivery on Order Over 2499 BDT"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@drawable/view_shape" />
        <LinearLayout
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/img_test_member_discount"
                android:padding="15dip"
                android:layout_marginTop="@dimen/dp_7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:text="Member Discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:layout_marginTop="@dimen/dp_10"
                    />
        </LinearLayout>
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/view_shape" />
        <LinearLayout
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/img_test_money_back"
                android:padding="15dip"
                android:layout_marginTop="@dimen/dp_7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:text="Money back"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    />
            </LinearLayout>
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/view_shape" />
        <LinearLayout
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@mipmap/img_test_supports"
                android:padding="15dip"
                android:layout_marginTop="@dimen/dp_7"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:text="Supports 24/7"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>

    </LinearLayout>
    </HorizontalScrollView>

    </LinearLayout>



