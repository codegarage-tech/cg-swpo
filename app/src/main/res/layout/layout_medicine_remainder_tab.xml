<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_remainder_medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMessageStateBlue"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lin_add_remainder_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight=".23"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_remainder"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:scaleType="fitXY"
                android:tint="@color/white"
                android:background="@drawable/ic_re" />

            <TextView
                android:id="@+id/tv_add_remainder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/title_medicine_remainder_added"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_pillbox_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight=".20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pillbox"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:scaleType="fitXY"
                android:tint="@color/colorWhite"
                android:background="@drawable/ic_pillbox"  />

            <TextView
                android:id="@+id/tv_pillbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/title_medicine_remainder_pillbox"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_session_left_todays_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight=".22"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_session_left"
                    android:layout_width="40dip"
                    android:layout_height="35dip"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:tint="@color/white"
                    android:background="@drawable/ic_calender" />

                <EditText
                    android:id="@+id/et_from_date"
                    android:layout_width="38dip"
                    android:layout_height="35dip"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingLeft="@dimen/dp_1"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="10 Aug"
                    android:textColor="@color/color_grey_800"
                    android:textColorHint="@color/color_grey_500"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_session_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/title_medicine_remainder_session"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_medicine_remainder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight=".37"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="120dip"
                android:layout_height="35dip"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/safeway_pharma_logo" />

            <TextView
                android:id="@+id/tv_medicine_remainder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/title_medicine_remainder"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/lin_add_medicine_remainder"
                layout="@layout/layout_add_medicine_remainder_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/lin_medicine_pillbox"
                layout="@layout/layout_pillbox_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/lin_session_left"
                layout="@layout/layout_session_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_7"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_image_slider"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:visibility="gone">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/home_img_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    custom:auto_cycle="true"
                    custom:indicator_visibility="visible"
                    custom:pager_animation="Accordion"
                    custom:pager_animation_span="1100" />

                <TextView
                    android:id="@+id/tv_shop_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_bg_pick_right_round"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/title_show_now"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lin_no_data_found_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/vector_ic_empty_box" />

                <TextView
                    android:id="@+id/tv_no_data_found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_20"
                    android:text="@string/txt_notification_is_not_found"
                    android:textColor="@color/color_grey_600"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_this_feature_is_under_development"
                    android:textColor="@color/color_grey_600"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>