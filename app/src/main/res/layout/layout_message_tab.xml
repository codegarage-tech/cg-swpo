<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_message_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorMessageStateBlue"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:weightSum="1">

            <LinearLayout
                android:id="@+id/lin_message_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_3">

                <ImageView
                    android:id="@+id/iv_orders"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    app:srcCompat="@drawable/vector_ic_mgs_order_notification"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_message_orders"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_message_chats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_3">

                <ImageView
                    android:id="@+id/iv_chats"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    app:srcCompat="@drawable/vector_ic_mgs_chat"
                    android:tint="@color/colorWhite"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_chats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/title_message_chats"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5" />

            </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_message_promos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_3">

            <ImageView
                android:id="@+id/iv_promos"
                android:layout_width="30dip"
                android:layout_height="30dip"
                app:srcCompat="@drawable/vector_ic_mgs_promos"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_promos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_message_promos"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_16"
                android:paddingTop="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_message_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_3">

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="30dip"
                android:layout_height="30dip"
                app:srcCompat="@drawable/vector_ic_mgs_settings"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_message_settings"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_16"
                android:paddingTop="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5" />

        </LinearLayout>


    </LinearLayout>

    <include
        android:id="@+id/lin_order_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        layout="@layout/layout_order_notification_view"
        android:visibility="gone"/>

    <include
        android:id="@+id/lin_chats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        layout="@layout/layout_chats_view"
        android:layout_marginBottom="@dimen/dp_60"
        android:visibility="gone"/>

    <include
        android:id="@+id/lin_promos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        layout="@layout/layout_promos_view"
        android:visibility="gone"/>

    <include
        android:id="@+id/cv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        layout="@layout/layout_notification_setting_view"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/lin_no_data_found_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/vector_ic_empty_box" />

        <TextView
            android:id="@+id/tv_no_data_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:text="@string/txt_notification_is_not_found"
            android:textColor="@color/color_grey_600"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_this_feature_is_under_development"
            android:textColor="@color/color_grey_600"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>