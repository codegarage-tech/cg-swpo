<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_10"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="4dip">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_5">
    <TextView
        android:id="@+id/tv_setting_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/switch_setting_notification"
        android:layout_toStartOf="@+id/switch_setting_notification"
        android:text="@string/title_message_notifications"
        android:textColor="@color/color_grey_700"
        android:textSize="@dimen/sp_14"
        android:paddingTop="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5" />

    <vn.luongvo.widget.iosswitchview.SwitchView
        android:id="@+id/switch_setting_notification"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        app:color_off="@color/red_500"
        app:color_on="@color/colorMessageStateBlue" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_setting_chats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/switch_setting_chat"
            android:layout_toStartOf="@+id/switch_setting_chat"
            android:text="@string/title_message_chats"
            android:textColor="@color/color_grey_700"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5" />

        <vn.luongvo.widget.iosswitchview.SwitchView
            android:id="@+id/switch_setting_chat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:color_off="@color/red_500"
            app:color_on="@color/colorMessageStateBlue" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_setting_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/switch_setting_order_info"
            android:layout_toStartOf="@+id/switch_setting_order_info"
            android:text="@string/title_message_orders_info"
            android:textColor="@color/color_grey_700"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5" />

        <vn.luongvo.widget.iosswitchview.SwitchView
            android:id="@+id/switch_setting_order_info"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:color_off="@color/red_500"
            app:color_on="@color/colorMessageStateBlue" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_setting_promo_mgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/switch_setting_promo_mgs"
            android:layout_toStartOf="@+id/switch_setting_promo_mgs"
            android:text="@string/title_message_promos_mgs"
            android:textColor="@color/color_grey_700"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5" />

        <vn.luongvo.widget.iosswitchview.SwitchView
            android:id="@+id/switch_setting_promo_mgs"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:color_off="@color/red_500"
            app:color_on="@color/colorMessageStateBlue" />
    </RelativeLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>

