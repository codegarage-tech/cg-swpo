<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_grey_200"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_lay_edit_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dashed_line"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_edit_delivery_address_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="@dimen/dp_7"
                        android:text="@string/title_edit_delivery_address"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_400"
                        android:textSize="@dimen/sp_18" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_selected_ok"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_round_tick"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/typeface_500"
                android:gravity="left"
                android:text="@string/txt_shipping_address"
                android:textColor="@color/blue_500"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="@dimen/dp_5">

                    <LinearLayout
                        android:id="@+id/lin_add_address"
                        android:layout_width="match_parent"
                        android:layout_height="90dip"
                        android:background="@drawable/shape_dashed_line"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_10"
                            app:srcCompat="@drawable/vector_ic_add_address"
                            android:tint="@color/colorPrimary"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="@string/txt_sa_add"
                            android:layout_gravity="center"
                            android:textColor="@color/color_grey_800"
                            android:textSize="@dimen/sp_15" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="@dimen/dp_5">

                    <LinearLayout
                        android:id="@+id/lin_edit_address"
                        android:layout_width="match_parent"
                        android:layout_height="90dip"
                        android:background="@drawable/shape_dashed_line"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_10"
                            app:srcCompat="@drawable/vector_ic_address_edit"
                            android:tint="@color/colorPrimary"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="@string/txt_sa_edit"
                            android:layout_gravity="center"
                            android:textColor="@color/color_grey_800"
                            android:textSize="@dimen/sp_15" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".33"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="@dimen/dp_5">

                    <LinearLayout
                        android:id="@+id/lin_all_address"
                        android:layout_width="match_parent"
                        android:layout_height="90dip"
                        android:background="@drawable/shape_dashed_line"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_10"
                            app:srcCompat="@drawable/vector_ic_all_address"
                            android:tint="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="@string/txt_sa_view"
                            android:layout_gravity="center"
                            android:textColor="@color/color_grey_800"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="@color/color_grey_800"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_grey_200">

    <TextView
        android:id="@+id/tv_essestial_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/title_more_essentials_product"
        android:textColor="@color/color_pink"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"/>

    <LinearLayout
        android:id="@+id/ll_container_essential_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_essential_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:background="@color/color_grey_300"
            android:nestedScrollingEnabled="false"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_3"
            android:visibility="visible"/>
      </LinearLayout>
    </LinearLayout>

</LinearLayout>