<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dip"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".3">

                <ImageView
                    android:id="@+id/iv_category"
                    android:layout_width="120dip"
                    android:layout_height="100dip"
                    android:layout_margin="@dimen/dp_5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/list_item_task_text_view_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@string/typeface_500"
                    android:maxLines="1"
                    android:text="Alacot DS 0.2%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@string/typeface_500"
                    android:maxLines="1"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="Olapatadine HCI USP 0.2% and 0.1%"
                    android:textColor="@color/color_grey_600"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/offer_accepted_confirmation_button_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="28dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/curv_shape_button_shape_green"
                        android:text="@string/title_buy_now"
                        android:textColor="@color/green_700" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="28dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/curv_shape_button_shape_bg_green"
                        android:text="@string/title_add_to_cart"
                        android:textColor="@color/whiteColor" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10">

                        <ImageView
                            android:id="@+id/action_search"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/vector_ic_favourite" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>