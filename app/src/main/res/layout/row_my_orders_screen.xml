<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight=".2">

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="match_parent"
                    android:layout_height="90dip"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/vector_ic_error" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight=".7"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_35"
                        android:ellipsize="end"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_myorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:checked="false"
                        android:textAllCaps="false"
                        app:buttonTint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tv_generic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginRight="@dimen/dp_35"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:ellipsize="end"
                        android:fontFamily="@string/typeface_500"
                        android:text=""
                        android:textColor="@color/color_grey_600"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight=".38"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_discount_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_2"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_weight=".67"
                        android:gravity="center|right"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ll_minus"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight=".15"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dip"
                                android:layout_height="25dip"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:padding="@dimen/dp_2"
                                app:srcCompat="@drawable/vector_ic_minus" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_qty"
                            android:layout_width="65dip"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_grey_background"
                            android:ellipsize="end"
                            android:fontFamily="@string/typeface_500"
                            android:gravity="center"
                            android:padding="@dimen/dp_4"
                            android:text="10"
                            android:textColor="@color/green_900"
                            android:textSize="@dimen/sp_12" />

                      <!--  <EditText
                            android:id="@+id/et_qty"
                            android:layout_width="65dip"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_grey_background"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:text="1"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/sp_12" />
-->
                        <LinearLayout
                            android:id="@+id/ll_plus"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight=".15"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dip"
                                android:layout_height="25dip"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:padding="@dimen/dp_2"
                                app:srcCompat="@drawable/vector_ic_add" />
                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_product_delete"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginRight="@dimen/dp_2"
                        android:padding="@dimen/dp_4"
                        app:srcCompat="@drawable/vector_ic_delete" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>