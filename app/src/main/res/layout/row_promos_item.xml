<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_7"
    android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/drop_shadow_rectangle_transparent"
            android:layout_gravity="center"
            android:elevation="@dimen/dp_1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_promos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                      />




                        <com.melih.strokedtextview.StrokedTextView
                            android:id="@+id/tv_stroked_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_message_notifications"
                            android:textSize="@dimen/dp_20"
                            android:textStyle="bold|italic"
                            android:textColor="@color/color_grey_900"
                            app:strokeColor="@color/white"
                            app:strokeThickness="3dp"
                            />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_5"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_collection_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@color/colorPrimary"
                            android:elevation="@dimen/dp_2"
                            android:gravity="center"
                            android:maxLines="1"
                            android:padding="@dimen/dp_3"
                            android:text="General Medicine"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/sp_10" />

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
</RelativeLayout>



