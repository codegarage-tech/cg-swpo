<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="128dip"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/dp_2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="127dip"
            android:layout_height="90dip"
            android:layout_gravity="center"
            android:scaleType = "fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_grey_800"
                android:textSize="@dimen/sp_11"
                android:singleLine="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/color_grey_800"
                android:textSize="@dimen/sp_11"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_product_generic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_grey_900"
                android:textSize="@dimen/sp_11"
                android:ellipsize="end"
                android:singleLine="true"  />

            <TextView
                android:id="@+id/tv_product_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="150.00 TK"
                android:textColor="@color/color_pink"
                android:textSize="@dimen/sp_11"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_strike_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey_900"
                android:textSize="@dimen/sp_11"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>