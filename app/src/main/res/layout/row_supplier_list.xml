<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_circular_white_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_store"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/vector_ic_login_user_grey" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_store_first_name"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="right|bottom"
                android:background="@drawable/shape_circular_pink_bg_view"
                android:gravity="center"
                android:text="E"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/dp_10"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_full_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="Salma Begum"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/lin_all_status_view"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lin_order_progress"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_circular_white_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="6dip"
                                app:srcCompat="@drawable/vector_ic_swipe" />

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_order_delivery_on_the_way"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lin_order_progress"
                        android:background="@drawable/shape_circular_white_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="6dip"
                                app:srcCompat="@drawable/vector_delivery_truck" />

                            <TextView
                                android:id="@+id/tv_review_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|top"
                                android:layout_marginRight="@dimen/dp_4"
                                android:gravity="left"
                                android:text="6"
                                android:textColor="@color/red_600"
                                android:textSize="@dimen/dp_8"
                                android:visibility="gone"/>

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_order_received_by_user"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lin_order_delivery_on_the_way"
                        android:background="@drawable/shape_circular_white_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="6dip"
                                app:srcCompat="@drawable/vector_ic_addiction" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|top"
                                android:layout_marginRight="@dimen/dp_4"
                                android:gravity="left"
                                android:text="6"
                                android:textColor="@color/red_600"
                                android:textSize="@dimen/dp_8"
                                android:visibility="gone"/>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_order_comleted"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lin_order_delivery_on_the_way"
                        android:background="@drawable/shape_circular_white_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="6dip"
                                app:srcCompat="@drawable/vector_accepted" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|top"
                                android:layout_marginRight="@dimen/dp_4"
                                android:gravity="left"
                                android:text="6"
                                android:textColor="@color/red_600"
                                android:textSize="@dimen/dp_8"
                                android:visibility="gone"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_store_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_grey_600"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>