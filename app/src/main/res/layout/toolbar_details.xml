<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/toolbar_base"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/ll_left_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/vector_ic_left_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_screen_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_left_back"
            android:layout_toLeftOf="@+id/rl_cart"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center">

            <com.meembusoft.safewaypharmaonline.view.CanaroTextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_marginRight="@dimen/dp_10"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_cart"
            android:layout_width="@dimen/dp_50"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                app:srcCompat="@drawable/vector_ic_cart_white" />

            <TextView
                android:id="@+id/tv_cart"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignRight="@+id/iv_cart"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="40"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/shape_circular_red_bg_view"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>



</androidx.appcompat.widget.Toolbar>
