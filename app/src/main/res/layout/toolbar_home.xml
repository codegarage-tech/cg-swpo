<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/toolbar_base"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4">

        <ImageView
            android:id="@+id/iv_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp_7"
            app:srcCompat="@drawable/vector_ic_barcode"/>

        <LinearLayout
            android:id="@+id/lin_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@+id/iv_barcode"
            android:layout_toEndOf="@+id/iv_barcode"
            android:layout_toLeftOf="@+id/iv_profile"
            android:layout_toStartOf="@+id/iv_profile"

            android:orientation="horizontal"
            android:background="@drawable/curv_shape_button_hover_white">

            <ImageView
                android:id="@+id/action_search"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_7"
                android:padding="@dimen/dp_1"
                app:srcCompat="@drawable/vector_ic_search" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Search "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="@dimen/dp_50"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_5"
            app:srcCompat="@drawable/vector_ic_cart_white"
          />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_1"
            android:text="3"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/shape_circular_red_bg_view" />
    </RelativeLayout>

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/vector_ic_logout_down"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/vector_ic_user_grey"
            android:visibility="gone"/>

       <!-- <ImageView
            android:id="@+id/iv_supplier"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/vector_ic_supplier"
            android:visibility="gone"/>-->

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
